{{#if is_hero_card}}
    {{#if feature_image}}
        <a class="card card--hero" href="{{url}}">
            {{> components/image
                image_type='tag'
                image_class='lazyload'
                image_url=feature_image
                size_xs=true
                size_s=true
                size_m=true
                loading='lazy'
            }}
            <h3>#{{name}}</h3>
        </a>
    {{/if}}
{{else if is_gallery_card}}
   {{#if feature_image}}
        <figure class="card card--gallery">
            <a href="{{url}}">
                {{> components/image
                    image_type='post'
                    picture_class='card-feature-picture'
                    image_class='lazyload card-feature-image'
                    image_url=feature_image
                    size_xs=true
                    size_s=true
                    size_m=true
                    loading='lazy'
                }}
            </a>
            <a 
                href="{{img_url feature_image size="xl" format="webp"}}" 
                class="card-lightbox-target glightbox" 
            >
                {{> icons/gallery-open}}
                <div class="pswp-caption-content">
                    <h3>{{title}}</h3>
                    <div class="flex items-center">
                        {{#if primary_tag}}
                            <span>{{primary_tag.name}}</span>
                            <span class="bullet"></span>
                        {{/if}} 
                        <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="D MMM YYYY"}}</time>
                    </div>
                </div>
            </a>
        </figure>
   {{/if}}
{{else if is_category}}
    <a href="{{url}}" class="card card--category {{#has number="1"}} card--category-1{{else has number="2, 3"}} card--category-2{{else}} card--category-3{{/has}}">
        <figure>
            {{> components/image
                image_type='tag'
                image_class='lazyload'
                image_url=feature_image
                size_xs=true
                size_s=true
                size_m=true
                loading='lazy'
            }}
            <caption><span class="card__caption">{{name}}</span></caption>
        </figure>
    </a>
{{else if is_post}}
    <article class="card card--post {{#has number='1'}}card--post-1{{/has}}">
        {{#if feature_image}}
            <a href="{{url}}">
                <figure>
                    {{> components/image
                        image_type='post'
                        image_class='lazyload'
                        image_url=feature_image
                        size_xs=true
                        size_s=true
                        size_m=true
                        size_l=true
                        loading='lazy'
                    }}
                </figure>
            </a>
        {{/if}}
        <h3><a href="{{url}}">{{title}}</a></h3>
        {{#if tags}}
            <div class="card__tags flex items-center">
                {{#foreach tags}}
                    <span>#{{name}}</span>
                {{/foreach}}
            </div>
        {{/if}}
        
    </article>
{{/if}}

