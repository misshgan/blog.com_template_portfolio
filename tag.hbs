{{!< default}}

<section class="tag-page">
    <div class="container wrapper">
        {{#tag}}
            <h1 class="section-title">{{name}}</h1>
            {{#if description}}
                <p class="tag-page__description">{{description}}</p>
            {{/if}}
        {{/tag}}

        {{> components/loop is_posts=true is_tag_page=true}}
    </div>
</section>